import cv2
from ultralytics import YOLO
import torch

CAMERA_INDEX = 0

def main():
    device = 'cuda' if torch.cuda.is_available() else 'cpu'
    print(f"Se ruleaza pe: {device.upper()}")
    
    print("Se incarca modelul YOLOv11m (Medium)...")
    model = YOLO('yolo11m.pt') 

    print(f"Incercam sa deschidem camera cu indexul {CAMERA_INDEX}...")
    cap = cv2.VideoCapture(CAMERA_INDEX)
    
    cap.set(cv2.CAP_PROP_FRAME_WIDTH, 1920)
    cap.set(cv2.CAP_PROP_FRAME_HEIGHT, 1080)

    if not cap.isOpened():
        print(f"Eroare: Nu s-a putut deschide camera cu indexul {CAMERA_INDEX}.")
        print("Incearca sa schimbi CAMERA_INDEX in cod la 0 sau 2.")
        return

    print("Camera pornita. Apasa tasta 'q' pentru a inchide.")

    while True:
        ret, frame = cap.read()
        if not ret:
            print("Eroare la citirea cadrului.")
            break

        results = model(frame, stream=True, device=device, conf=0.15, iou=0.5, classes=[2])

        for r in results:
            annotated_frame = r.plot()
            
            if len(r.boxes) > 0:
                for box in r.boxes:
                    cls_id = int(box.cls[0])
                    class_name = model.names[cls_id]
                    conf_score = float(box.conf[0])
                    
                    if conf_score > 0.15:
                        print(f"Detectat: {class_name} ({conf_score:.2f})")

        display_frame = cv2.resize(annotated_frame, (1280, 720))
        cv2.imshow('Test SmartPark - YOLO11m', display_frame)

        if cv2.waitKey(1) & 0xFF == ord('q'):
            break

    cap.release()
    cv2.destroyAllWindows()
    print("Program incheiat.")

if __name__ == "__main__":
    main()